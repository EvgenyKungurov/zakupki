<h2><%= t('all_groups') %></h2>
<div class="row">
  <div class="col s12">
  <% if current_user %>
    <%= link_to(t('group.new'), new_group_path, class: "waves-effect waves-light btn") %>
  <% end %>
  </div>
</div>

<div class="row">
  <% @groups.each do |group|  %>
  <div class="col s12 m3">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag("http://placekitten.it/280/235", class: "activator") %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          <%= group.name %>
          <i class="material-icons right">more_vert</i>
        </span>
        <p><%= link_to(t(:view), group_path(group)) %></p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
          <%= group.name %>
          <i class="material-icons right">close</i>
        </span>
        <p><%= truncate(group.description, length: 150) %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>


